{
  "env": {
      "browser": true,
      "es6": true
  },
  "extends": [
      "google"
  ],
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "plugins": [
      "react"
  ],
  "rules": {
     "max-len": ["error", { "code": 120 }]
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}
